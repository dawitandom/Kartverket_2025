@{
    ViewData["Title"] = "Log In";
}

<section class="kv-shell kv-bg" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header-kartverket text-center">
                    <h3 class="mb-0">Kartverket Login</h3>
                </div>
                
                <div class="card-body p-5">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-action="Login">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="username" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Username</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="username" 
                                   name="username" 
                                   required 
                                   autocomplete="username"
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Password</label>
                            <input type="password" 
                                   class="form-control form-control-lg" 
                                   id="password" 
                                   name="password" 
                                   required 
                                   autocomplete="current-password"
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        <button type="submit" class="btn btn-kartverket-primary w-100 mb-3 btn-lg">
                            Log In
                        </button>
                        <div class="mt-3 text-center">
                            <span>No account?</span>
                            <a asp-action="Register" class="btn btn-outline-primary btn-sm ms-2">Sign up</a>
                        </div>
                    </form>

                    <hr class="my-4">
                    
