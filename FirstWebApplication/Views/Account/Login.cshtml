@* 
    Innloggingsside for Kartverket Obstacle Reporting System.
    Viser et enkelt innloggingsskjema med brukernavn og passord.
    Inkluderer ogs√• testbruker-informasjon for utvikling.
*@

@{
    ViewData["Title"] = "Log In";
}

@* Hero-seksjon med gr√∏nn gradient bakgrunn *@
<div class="hero-section" style="padding: 3rem 0;">
    <div class="container">
        <h1>Log In</h1>
        <p>Access Kartverket Obstacle Reporting System</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            @* Hovedkort med innloggingsskjema *@
            <div class="card shadow-lg">
                @* Card header med Kartverket-styling (gr√∏nn gradient) *@
                <div class="card-header-kartverket text-center">
                    <h3 class="mb-0">üó∫Ô∏è Kartverket Login</h3>
                </div>
                
                <div class="card-body p-5">
                    @* Feilmelding hvis innlogging feiler *@
                    @* ViewBag.Error settes i AccountController.Login() ved feil brukernavn/passord *@
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }

                    @* Innloggingsskjema - POST til AccountController.Login() *@
                    <form method="post" asp-action="Login">
                        @* Brukernavn-felt *@
                        <div class="mb-4">
                            <label for="username" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Username</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="username" 
                                   name="username" 
                                   required 
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        @* Passord-felt *@
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Password</label>
                            <input type="password" 
                                   class="form-control form-control-lg" 
                                   id="password" 
                                   name="password" 
                                   required 
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        @* Submit-knapp med Kartverket-styling *@
                        <button type="submit" class="btn btn-kartverket-primary w-100 mb-3 btn-lg">
                            Log In
                        </button>
                    </form>

                    <hr class="my-4">

                    @* Testbruker-informasjon - kun for utvikling/testing *@
                    @* I produksjon b√∏r denne seksjonen fjernes *@
                    <div class="alert alert-kartverket">
                        <h6 class="fw-bold mb-3">Test Accounts:</h6>
                        <p class="mb-2">
                            <strong>Pilot:</strong> 
                            <code>testuser</code> / <code>password123</code>
                        </p>
                        <p class="mb-0">
                            <strong>Admin:</strong> 
                            <code>admin</code> / <code>admin123</code>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>