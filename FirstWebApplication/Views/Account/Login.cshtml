
@{
    ViewData["Title"] = "Log In";
}

<div class="hero-section" style="padding: 3rem 0;">
    <div class="container">
        <h1>Log In</h1>
        <p>Access Kartverket Obstacle Reporting System</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header-kartverket text-center">
                    <h3 class="mb-0">üó∫Ô∏è Kartverket Login</h3>
                </div>
                
                <div class="card-body p-5">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-action="Login">
                        <div class="mb-4">
                            <label for="username" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Username</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="username" 
                                   name="username" 
                                   required 
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Password</label>
                            <input type="password" 
                                   class="form-control form-control-lg" 
                                   id="password" 
                                   name="password" 
                                   required 
                                   style="border: 2px solid #ddd; border-radius: 4px;" />
                        </div>
                        
                        <button type="submit" class="btn btn-kartverket-primary w-100 mb-3 btn-lg">
                            Log In
                        </button>
                    </form>

                    <hr class="my-4">

                    <div class="alert alert-kartverket">
                        <h6 class="fw-bold mb-3">Test Accounts:</h6>
                        <p class="mb-2">
                            <strong>Admin:</strong> 
                            <code>admin</code> / <code>admin123</code>
                        </p>
                        <p class="mb-2">
                            <strong>Registrar:</strong> 
                            <code>registrar</code> / <code>registrar123</code>
                        </p>
                        <p class="mb-2">
                            <strong>Pilot:</strong> 
                            <code>pilot</code> / <code>pilot123</code>
                        </p>
                        <p class="mb-0">
                            <strong>Entrepreneur:</strong> 
                            <code>entrepreneur</code> / <code>entrepreneur123</code>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>