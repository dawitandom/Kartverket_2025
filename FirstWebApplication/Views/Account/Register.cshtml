@model FirstWebApplication.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Create account";
}

<section class="kv-shell kv-bg" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-header-kartverket text-center">
                        <h3 class="mb-0">Create Account</h3>
                    </div>

                    <div class="card-body p-5">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Error:</strong> @ViewBag.Error
                            </div>
                        }

                        <form asp-action="Register" method="post">
                            @Html.AntiForgeryToken()

                            <div class="row mb-3">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label asp-for="FirstName" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">First name</label>
                                    <input asp-for="FirstName" class="form-control form-control-lg" required autocomplete="given-name" style="border: 2px solid #ddd; border-radius: 4px;" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Last name</label>
                                    <input asp-for="LastName" class="form-control form-control-lg" required autocomplete="family-name" style="border: 2px solid #ddd; border-radius: 4px;" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="UserName" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Username</label>
                                <input asp-for="UserName" class="form-control form-control-lg" required autocomplete="username" style="border: 2px solid #ddd; border-radius: 4px;" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Email</label>
                                <input asp-for="Email" class="form-control form-control-lg" required autocomplete="email" style="border: 2px solid #ddd; border-radius: 4px;" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);">Password</label>

                                <div class="alert alert-info py-2">
                                    <small class="fw-semibold">Password requirements</small>
                                    <div id="pwdHelp" class="form-text mt-2">
                                        <ul class="mb-0" id="password-requirements" style="list-style: none; padding-left: 0;">
                                            <li id="req-length" class="text-muted">• At least 12 characters</li>
                                            <li id="req-upper" class="text-muted">• At least one uppercase letter (A–Z)</li>
                                            <li id="req-lower" class="text-muted">• At least one lowercase letter (a–z)</li>
                                            <li id="req-digit" class="text-muted">• At least one digit (0–9)</li>
                                            <li id="req-special" class="text-muted">• At least one non-alphanumeric character (e.g. !&#64;#$%)</li>
                                        </ul>
                                    </div>
                                </div>

                                <input asp-for="Password" type="password" class="form-control form-control-lg" required autocomplete="new-password"
                                       aria-describedby="pwdHelp"
                                       style="border: 2px solid #ddd; border-radius: 4px;" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold" style="color: var(--kartverket-dark-blue);"></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" required autocomplete="new-password" style="border: 2px solid #ddd; border-radius: 4px;" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-kartverket-primary w-100 mb-3 btn-lg">Register</button>

                            <div class="mt-3 text-center">
                                <span>Already have an account?</span>
                                <a asp-action="Login" class="btn btn-outline-primary btn-sm ms-2">Log in</a>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="alert alert-kartverket">
                            <small class="text-muted">By creating an account you agree to the terms and privacy policy.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            var pwd = document.querySelector('input[name="Password"]');
            if (!pwd) return;

            var reqLength = document.getElementById('req-length');
            var reqUpper = document.getElementById('req-upper');
            var reqLower = document.getElementById('req-lower');
            var reqDigit = document.getElementById('req-digit');
            var reqSpecial = document.getElementById('req-special');

            function updateRequirements(value) {
                value = value || '';
                toggle(reqLength, value.length >= 12);
                toggle(reqUpper, /[A-Z]/.test(value));
                toggle(reqLower, /[a-z]/.test(value));
                toggle(reqDigit, /\d/.test(value));
                toggle(reqSpecial, /[^A-Za-z0-9]/.test(value));
            }

            function toggle(el, ok) {
                if (!el) return;
                el.classList.remove('text-muted', 'text-danger', 'text-success');
                el.classList.add(ok ? 'text-success' : 'text-danger');
            }

            pwd.addEventListener('input', function (e) {
                updateRequirements(e.target.value);
            });

            // Initial state (before typing)
            updateRequirements('');
        })();
    </script>
}