@model IEnumerable<FirstWebApplication.Models.Report>
@using System.Linq

@{
    ViewData["Title"] = "Reports from my organization";
    var reports = (Model ?? Enumerable.Empty<FirstWebApplication.Models.Report>()).ToList();

    // read optional UI state (controller may or may not provide these)
    var rawFilterStatus = ViewBag.FilterStatus as string;
    var currentFilterStatus = string.IsNullOrWhiteSpace(rawFilterStatus) ? "all" : rawFilterStatus!;
    var currentFilterUser = (ViewBag.FilterUser as string) ?? string.Empty;
}

@* Same compact Report ID styles used across admin pages *@
<style>
    th.report-id-header { min-width: 12ch; width: 12ch; }
    td.report-id {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Courier New", monospace;
        font-weight: 600;
        font-size: .95rem;
        color: #13430f;
        background: rgba(45,80,22,0.05);
        padding: .35rem .5rem;
        border-radius: .25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 12ch;
    }

    .filter-search { min-width: 200px; max-width: 360px; width: 100%; }

    /* Popover and button styles (match ReviewedReports) */
    .popover.filter-popover-custom {
        min-width: 320px;
        max-width: 520px;
        border-radius: .6rem;
        border: 1px solid rgba(0,0,0,0.06);
        box-shadow: 0 8px 30px rgba(27, 68, 28, 0.12);
        background: linear-gradient(180deg, #ffffff 0%, #fbfff9 100%);
    }

    .popover.filter-popover-custom .popover-body { padding: 0.75rem; }

    .filter-popover-content {
        display: flex;
        flex-direction: column;
        gap: .6rem;
        font-size: .95rem;
    }

    .filter-popover-section .section-title {
        font-weight: 700;
        color: #2d5016;
        margin-bottom: .35rem;
        font-size: .9rem;
    }

    .filter-buttons-row {
        display: flex;
        flex-wrap: wrap;
        gap: .35rem;
    }

    /* Prominent button visual parity with ReviewedReports */
    #filterPopoverBtn {
        background: linear-gradient(180deg,#ffffff,#f3fff0);
        border: 1px solid rgba(45,80,22,0.12);
        color: #235016;
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <h2 style="color: #2d5016;">Reports from my organization</h2>

    @* Boxed section (card) with Filter popover button on the left and search on the right *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row gx-5 align-items-start">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center gap-2">
                        <button id="filterPopoverBtn" type="button" class="btn btn-sm btn-outline-success" aria-haspopup="true" aria-expanded="false" title="Filter by status:">
                            <i class="bi bi-funnel-fill me-1" aria-hidden="true"></i> Filter
                        </button>
                    </div>

                    @* Hidden server-rendered filter popover content (status links unchanged) *@
                    <div id="filter-popover-content" class="d-none" style="min-width:220px;">
                        <div class="filter-popover-content">
                            <div class="filter-popover-section">
                                <div class="section-title">Status</div>
                                <div class="filter-buttons-row">
                                    <a asp-action="OrgReports" asp-route-filterStatus="all" asp-route-filterUser="@currentFilterUser"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "all", StringComparison.OrdinalIgnoreCase) ? "btn-success" : "btn-outline-success")">All</a>

                                    <a asp-action="OrgReports" asp-route-filterStatus="Pending" asp-route-filterUser="@currentFilterUser"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Pending", StringComparison.OrdinalIgnoreCase) ? "btn-warning text-dark" : "btn-outline-warning text-dark")">Pending</a>

                                    <a asp-action="OrgReports" asp-route-filterStatus="Approved" asp-route-filterUser="@currentFilterUser"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Approved", StringComparison.OrdinalIgnoreCase) ? "btn-success" : "btn-outline-success")">Approved</a>

                                    <a asp-action="OrgReports" asp-route-filterStatus="Rejected" asp-route-filterUser="@currentFilterUser"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Rejected", StringComparison.OrdinalIgnoreCase) ? "btn-danger" : "btn-outline-danger")">Rejected</a>

                                    <a asp-action="OrgReports" asp-route-filterStatus="Draft" asp-route-filterUser="@currentFilterUser"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Draft", StringComparison.OrdinalIgnoreCase) ? "btn-secondary" : "btn-outline-secondary")">Draft</a>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                            </div>
                        </div>
                    </div>
                </div>

                @* Right column contains search form so the textbox is inside the boxed section *@
                <div class="col-md-6 d-flex justify-content-end align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <form id="filterForm" asp-action="OrgReports" method="get" class="d-flex ms-3">
                            <input id="filterUserInput" type="text" name="filterUser" class="form-control form-control-sm filter-search me-2" placeholder="Search username..." value="@currentFilterUser" autocomplete="off" />
                            <input type="hidden" name="filterStatus" value="@currentFilterStatus" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="table-responsive">
            @if (!reports.Any())
            {
                <div class="card-body">
                    <div class="alert alert-info shadow-sm mb-0">No reports found for your organization.</div>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead style="background-color: #2d5016; color: white;">
                        <tr>
                            <th class="report-id-header"><span class="fw-semibold">Report ID</span></th>
                            <th>Date</th>
                            <th>Username</th>
                            <th>Obstacle Type</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th><span class="fw-semibold">Status</span></th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in reports)
                        {
                            var desc = item.Description ?? string.Empty;
                            <tr>
                                <td class="report-id"><span title="@item.ReportId">@item.ReportId</span></td>
                                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.User?.UserName</td>
                                <td>@item.ObstacleType?.ObstacleName</td>
                                <td>@(desc.Length > 100 ? desc.Substring(0, 100) + "..." : desc)</td>
                                <td>
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span>@item.Latitude.Value.ToString("F6"), @item.Longitude.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (string.Equals(item.Status, "Approved", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (string.Equals(item.Status, "Rejected", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else if (string.Equals(item.Status, "Pending", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a asp-controller="Report" asp-action="Details" asp-route-id="@item.ReportId" class="btn btn-sm btn-outline-primary">Details</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('filterUserInput');
            if (input) {
                input.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        document.getElementById('filterForm')?.submit();
                    }
                });
            }
        })();
    </script>

    <script>
        // Initialize filter popover with manual trigger and outside-click / Escape handlers.
        document.addEventListener('DOMContentLoaded', function () {
            if (!(window.bootstrap && bootstrap.Popover)) return;

            var filterTrigger = document.getElementById('filterPopoverBtn');
            var popFilter = null;

            if (filterTrigger) {
                popFilter = new bootstrap.Popover(filterTrigger, {
                    container: 'body',
                    html: true,
                    sanitize: false,
                    content: function () {
                        var el = document.getElementById('filter-popover-content');
                        return el ? el.innerHTML : '';
                    },
                    placement: 'bottom',
                    customClass: 'filter-popover-custom',
                    trigger: 'manual'
                });

                filterTrigger.addEventListener('click', function (e) {
                    e.preventDefault();
                    try { popFilter.toggle(); } catch (err) { /* ignore */ }
                });
            }

            // Close when clicking outside popover or trigger
            document.addEventListener('click', function (e) {
                var popovers = Array.from(document.querySelectorAll('.popover'));
                var clickedInsidePopover = popovers.some(function (p) { return p.contains(e.target); });
                var clickedOnTrigger = (filterTrigger && filterTrigger.contains(e.target));

                if (!clickedInsidePopover && !clickedOnTrigger) {
                    try { if (popFilter) popFilter.hide(); } catch (err) { /* ignore */ }
                }
            });

            // Close on Escape
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    try { if (popFilter) popFilter.hide(); } catch (err) { /* ignore */ }
                }
            });
        });
    </script>
}