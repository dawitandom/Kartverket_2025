<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kartverket</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-kartverket navbar-dark">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                <img src="~/image/kartverket-logo-large.svg" class="site-logo" alt="logo" />
            </a>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="text-white-50 small d-none d-md-block">
                    @User.Identity?.Name
                    (
                    @(
                        User.IsInRole("Admin")        ? "Admin" :
                        User.IsInRole("Registrar")    ? "Registrar" :
                        User.IsInRole("Pilot")        ? "Pilot" :
                        User.IsInRole("Entrepreneur") ? "Entrepreneur" :
                        User.IsInRole("DefaultUser")  ? "DefaultUser" :
                        "User"
                    )
                    )
                </div>
            }

            <button class="navbar-toggler border-0" type="button"
                    data-bs-toggle="offcanvas" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end offcanvas-kartverket" tabindex="-1" id="mainNav" aria-labelledby="mainNavLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title fw-bold" id="mainNavLabel">Meny</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body d-flex flex-column justify-content-between">
                    <ul class="navbar-nav">

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center mb-3 px-1">
                                <span class="fw-semibold">
                                    @User.Identity?.Name
                                    <span style="opacity:.8;">
                                        (
                                        @(
                                            User.IsInRole("Admin")        ? "Admin" :
                                            User.IsInRole("Registrar")    ? "Registrar" :
                                            User.IsInRole("Pilot")        ? "Pilot" :
                                            User.IsInRole("Entrepreneur") ? "Entrepreneur" :
                                            User.IsInRole("DefaultUser")  ? "DefaultUser" :
                                            "User"
                                        )
                                        )
                                    </span>
                                </span>
                            </li>

                            @if (User.IsInRole("Pilot") || User.IsInRole("Entrepreneur") || User.IsInRole("DefaultUser"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="Scheme">New Report</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="MyReports">My Reports</a></li>
                            }

                            @if (User.IsInRole("Registrar"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="PendingReports">Pending Reports</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="ReviewedReports">Reviewed Reports</a></li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="PendingReports">Pending Reports</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="ReviewedReports">Reviewed Reports</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="AllReports">All Reports</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">Users</a></li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Log In</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                    </ul>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="pt-3 border-top">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-logout w-100">Log Out</button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </nav>
</header>

<main role="main">
    @RenderBody()
</main>

<footer>
    <div class="container text-center">
        <p class="mb-0">&copy; 2025 Kartverket - Obstacle Reporting System</p>
        <p class="mb-0" style="opacity: 0.8; font-size: 0.9rem;">Norwegian Mapping Authority</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/leaflet/leaflet.js"></script>
<script>
    if (typeof window.L === "undefined") {
        var s = document.createElement("script");
        s.src = "https://unpkg.com/leaflet@1.9.4/dist/leaflet.js";
        document.head.appendChild(s);
        var l = document.createElement("link");
        l.rel = "stylesheet";
        l.href = "https://unpkg.com/leaflet@1.9.4/dist/leaflet.css";
        document.head.appendChild(l);
    }
</script>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
