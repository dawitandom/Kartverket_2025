@model IEnumerable<FirstWebApplication.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
    var unreadCount = (int?)ViewBag.UnreadCount ?? 0;
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <h2 class="me-2 mb-0">Notifications</h2>

        @if (unreadCount > 0)
        {
            <span class="badge rounded-pill bg-danger">
                @unreadCount
            </span>
        }
    </div>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no notifications yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var n in Model)
            {
                var itemClasses = "list-group-item list-group-item-action d-flex justify-content-between align-items-start";
                if (!n.IsRead)
                {
                    itemClasses += " fw-bold"; // uleste = bold
                }

                <a asp-controller="Notification"
                   asp-action="Open"
                   asp-route-id="@n.Id"
                   class="@itemClasses">
                    <div class="me-2">
                        <div>@n.Title</div>
                        <small class="text-muted">
                            @n.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                        </small>
                        <div class="small text-body-secondary">
                            @n.Message
                        </div>
                    </div>

                    @if (!n.IsRead)
                    {
                        <span class="badge rounded-pill bg-danger">New</span>
                    }
                </a>
            }
        </div>
    }
</div>