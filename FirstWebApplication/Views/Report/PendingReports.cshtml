@*
    Admin-side for å se og behandle ventende rapporter.
    Kun tilgjengelig for Admin rolle.
    Viser kun rapporter med status "Pending".
    Støtter sortering etter dato, bruker eller hindring-type.
    Ny funksjonalitet: Klikk på en rapportrad for å vise/ skjule et innebygd kart under raden.
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "Report Requests";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<style>
    .report-expandable { cursor: pointer; }
    .map-container { height: 300px; width: 100%; }
    .map-row td { padding: 0.5rem; background: #f8f9fa; }
</style>

<div class="container mt-4">
    <h2 style="color: #2d5016;">Report Requests (Pending)</h2>

    @* Suksessmelding etter godkjenning/avslag *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            @* Lukk-knapp for alert (Bootstrap) *@
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Sorteringsknapper *@
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <label class="fw-bold mb-2" style="color: #2d5016;">Sort by:</label>

            @{
                // Read current sort state provided by controller
                var currentSort = (ViewBag.SortBy as string) ?? "date";
                bool currentDesc = ViewBag.Desc is bool b ? b : true;

                var dateIsActive = currentSort == "date";
                var userIsActive = currentSort == "user";
                var obstacleIsActive = currentSort == "obstacle";

                var dateNextDesc = dateIsActive ? !currentDesc : true;
                var userNextDesc = userIsActive ? !currentDesc : true;
                var obstacleNextDesc = obstacleIsActive ? !currentDesc : true;

                string Arrow(bool active, bool desc) => active ? (desc ? "▼" : "▲") : "";
            }

            <div class="btn-group" role="group">
                @* Aktiv knapp vises med btn-success, inaktiv med btn-outline-success *@
                @* Når samme sort-knapp klikkes igjen toggles ascending/descending *@
                <a asp-action="PendingReports"
                   asp-route-sortBy="date"
                   asp-route-desc="@(dateNextDesc)"
                   class="btn btn-sm @(dateIsActive ? "btn-success" : "btn-outline-success")">
                    Date <span class="ms-1">@Arrow(dateIsActive, currentDesc)</span>
                </a>

                <a asp-action="PendingReports"
                   asp-route-sortBy="user"
                   asp-route-desc="@(userNextDesc)"
                   class="btn btn-sm @(userIsActive ? "btn-success" : "btn-outline-success")">
                    User <span class="ms-1">@Arrow(userIsActive, currentDesc)</span>
                </a>

                <a asp-action="PendingReports"
                   asp-route-sortBy="obstacle"
                   asp-route-desc="@(obstacleNextDesc)"
                   class="btn btn-sm @(obstacleIsActive ? "btn-success" : "btn-outline-success")">
                    Obstacle Type <span class="ms-1">@Arrow(obstacleIsActive, currentDesc)</span>
                </a>
            </div>
        </div>
    </div>

    @* Viser melding hvis ingen pending rapporter *@
    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">No pending reports.</div>
    }
    else
    {
        @* Tabell med pending rapporter og handlingsknapper *@
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: #2d5016; color: white;">
                        <tr>
                            <th>Date</th>
                            <th>User</th>
                            <th>Obstacle Type</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var safeId = item.ReportId.Replace("\"", "").Replace("'", "").Replace(" ", "_");
                            <tr class="report-expandable" data-report-id="@safeId" title="Click to toggle map view">
                                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.User?.UserName</td>
                                <td>@item.ObstacleType?.ObstacleName</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <td>
                                    @* Sjekker om koordinater eksisterer før visning *@
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span>@item.Latitude.Value.ToString("F6"), @item.Longitude.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @* Godkjenn-knapp (POST til Approve action) *@
                                    <form asp-action="Approve" method="post" class="d-inline" onsubmit="event.stopPropagation();">
                                        @* ENDRET: reportId til id *@
                                        <input type="hidden" name="id" value="@item.ReportId" />
                                        <button type="submit" class="btn btn-sm btn-success" onclick="event.stopPropagation()">✓ Approve</button>
                                    </form>
                                    
                                    @* Avslå-knapp (POST til Reject action) *@
                                    <form asp-action="Reject" method="post" class="d-inline" onsubmit="event.stopPropagation();">
                                        @* ENDRET: reportId til id *@
                                        <input type="hidden" name="id" value="@item.ReportId" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="event.stopPropagation()">✗ Reject</button>
                                    </form>
                                </td>
                            </tr>

                            @* Hidden row that contains the map (collapsed by default) *@
                            <tr class="map-row" id="map-row-@safeId" style="display: none;">
                                <td colspan="6">
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        var latJs = item.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                                        var lonJs = item.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                                        <div id="map-@safeId" class="map-container" data-lat="@latJs" data-lon="@lonJs"></div>
                                    }
                                    else
                                    {
                                        <div class="text-muted">No location provided for this report.</div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<script>
    (function () {
        const maps = {}; // store Leaflet instances by container id (e.g. 'map-REPORTID')

        function createMap(containerId, lat, lon) {
            if (maps[containerId]) return maps[containerId];

            const map = L.map(containerId).setView([lat, lon], 16);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);
            L.marker([lat, lon]).addTo(map);
            maps[containerId] = map;
            return map;
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.report-expandable').forEach(function (row) {
                row.addEventListener('click', function (evt) {
                    // If click originates from a control that stopped propagation, do nothing
                    // (Approve/Reject buttons/forms use event.stopPropagation()).
                    const id = row.getAttribute('data-report-id');
                    const mapRow = document.getElementById('map-row-' + id);
                    if (!mapRow) return;

                    const computed = window.getComputedStyle(mapRow);
                    const isHidden = computed.display === 'none';

                    if (isHidden) {
                        mapRow.style.display = 'table-row';

                        const mapDiv = document.getElementById('map-' + id);
                        if (mapDiv && !maps['map-' + id]) {
                            const lat = parseFloat(mapDiv.getAttribute('data-lat'));
                            const lon = parseFloat(mapDiv.getAttribute('data-lon'));
                            setTimeout(function () {
                                const map = createMap('map-' + id, lat, lon);
                                setTimeout(function () { map.invalidateSize(); }, 200);
                            }, 50);
                        } else if (maps['map-' + id]) {
                            setTimeout(function () { maps['map-' + id].invalidateSize(); }, 100);
                        }
                    } else {
                        mapRow.style.display = 'none';
                    }
                });
            });
        });
    })();
</script>