@*
    Admin-side for å se og behandle ventende rapporter.
    Kun tilgjengelig for Admin rolle.
    Viser kun rapporter med status "Pending".
    Støtter sortering etter dato, bruker eller hindring-type.
*@

@using System.Linq
@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "Report Requests";

    var orgLookup = ViewBag.UserOrganizations as IDictionary<string, List<string>>;

    string GetUserOrganizations(string uid)
    {
        if (string.IsNullOrEmpty(uid) || orgLookup == null || !orgLookup.ContainsKey(uid))
            return "—";
        var list = orgLookup[uid];
        var preferred = new[] { "Pilot", "Entrepreneur", "DefaultUser", "Registrar", "Admin" };
        var hit = preferred.FirstOrDefault(r => list.Contains(r));
        return hit ?? (list.FirstOrDefault() ?? "—");
    }

    // UI-tilstand for organisasjonsfilter (lagt til)
    var allOrgs = ViewBag.Organizations as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var rawFilterOrg = ViewBag.FilterOrg as string;
    var currentFilterOrg = string.IsNullOrWhiteSpace(rawFilterOrg) ? "all" : rawFilterOrg!;
}

@{
    ViewData["Title"] = "Report Requests";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pendingreports.css" asp-append-version="true" />
}

<div class="container mt-4">
    <h2 style="color: #2d5016;">Report Requests (Pending)</h2>

    @* Suksessmelding etter godkjenning/avslag *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            @* Lukk-knapp for alert (Bootstrap) *@
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Kort med filter-popover og sorteringskontroller (organisasjonsfilter lagt til) *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row gx-5 align-items-start">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center gap-2">
                        <button id="filterPopoverBtn" type="button" class="btn btn-sm btn-outline-success" aria-haspopup="true" aria-expanded="false" title="Filter by organization">
                            <i class="bi bi-funnel-fill me-1" aria-hidden="true"></i> Filter
                        </button>
                    </div>

                    @* Skjult filter-popover innhold fra server (organisasjonslenker) *@
                    <div id="filter-popover-content" class="d-none" style="min-width:220px;">
                        <div class="filter-popover-content">
                            <div class="filter-popover-section">
                                <div class="section-title">Organization</div>
                                <div class="filter-buttons-row" role="group" aria-label="Organization filter">
                                    <a asp-action="PendingReports" asp-route-org="all" asp-route-sortBy="@ViewBag.SortBy" asp-route-desc="@ViewBag.Desc"
                                       class="btn btn-sm @(string.Equals(currentFilterOrg, "all", StringComparison.OrdinalIgnoreCase) ? "btn-success" : "btn-outline-secondary")">All</a>

                                    @if (allOrgs != null)
                                    {
                                        foreach (var o in allOrgs)
                                        {
                                            var isSelected = string.Equals((currentFilterOrg ?? "all"), (o.Value ?? ""), StringComparison.OrdinalIgnoreCase);
                                            <a asp-action="PendingReports" asp-route-org="@o.Value" asp-route-sortBy="@ViewBag.SortBy" asp-route-desc="@ViewBag.Desc"
                                               class="btn btn-sm @(isSelected ? "btn-success" : "btn-outline-secondary") org-button" title="@o.Text">@o.Text</a>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                            </div>
                        </div>
                    </div>
                </div>

                @* Høyre kolonne: Sorteringskontroller (beholder organisasjonsfilter ved sortering) *@
                <div class="col-md-6 d-flex justify-content-end align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <label class="fw-bold mb-0" style="color: #2d5016;">Sort by:</label>

                        @{
                            // Leser nåværende sorteringstilstand fra controller
                            var currentSort = (ViewBag.SortBy as string) ?? "date";
                            bool currentDesc = ViewBag.Desc is bool b ? b : true;

                            var dateIsActive = currentSort == "date";
                            var userIsActive = currentSort == "user";
                            var obstacleIsActive = currentSort == "obstacle";

                            var dateNextDesc = dateIsActive ? !currentDesc : true;
                            var userNextDesc = userIsActive ? !currentDesc : true;
                            var obstacleNextDesc = obstacleIsActive ? !currentDesc : true;

                            string Arrow(bool active, bool desc) => active ? (desc ? "▼" : "▲") : "";
                        }

                        <div class="btn-group" role="group">
                            <a asp-action="PendingReports"
                               asp-route-sortBy="date"
                               asp-route-desc="@(dateNextDesc)"
                               asp-route-org="@currentFilterOrg"
                               class="btn btn-sm @(dateIsActive ? "btn-success" : "btn-outline-success")">
                                Date <span class="ms-1">@Arrow(dateIsActive, currentDesc)</span>
                            </a>

                            <a asp-action="PendingReports"
                               asp-route-sortBy="user"
                               asp-route-desc="@(userNextDesc)"
                               asp-route-org="@currentFilterOrg"
                               class="btn btn-sm @(userIsActive ? "btn-success" : "btn-outline-success")">
                                User <span class="ms-1">@Arrow(userIsActive, currentDesc)</span>
                            </a>

                            <a asp-action="PendingReports"
                               asp-route-sortBy="obstacle"
                               asp-route-desc="@(obstacleNextDesc)"
                               asp-route-org="@currentFilterOrg"
                               class="btn btn-sm @(obstacleIsActive ? "btn-success" : "btn-outline-success")">
                                Obstacle Type <span class="ms-1">@Arrow(obstacleIsActive, currentDesc)</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Viser melding hvis ingen pending rapporter *@
    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">No pending reports.</div>
    }
    else
    {
        @* Tabell med pending rapporter og handlingsknapper *@
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: #2d5016; color: white;">
                    <tr>
                         <th class="report-id-header"><span class="fw-semibold">Report ID</span></th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Organization</th>
                        <th>Obstacle Type</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="report-id">
                                    <span title="@item.ReportId">@item.ReportId</span>
                                </td>
                                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.User?.UserName</td>
                                <td><span class="badge bg-secondary">@GetUserOrganizations(item.UserId)</span></td>
                                <td>@item.ObstacleType?.ObstacleName</td>
                                <td>@((item.Description ?? "").Length > 50 ? (item.Description ?? "").Substring(0, 50) + "..." : (item.Description ?? ""))</td>
                                <td>
                                    @* Sjekker om koordinater eksisterer før visning *@
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span>@item.Latitude.Value.ToString("F6"), @item.Longitude.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details"
                                       asp-route-id="@item.ReportId"
                                       class="btn btn-sm btn-outline-primary">
                                        Review
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/filter.popover.js" asp-append-version="true"></script>
}