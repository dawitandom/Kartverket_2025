@*
    Admin-side for å se godkjente og avslåtte rapporter.
    Kun tilgjengelig for Admin rolle.
    Støtter filtrering på status (all/approved/rejected).
    Støtter sortering etter dato, bruker, hindring eller status.
    Ny funksjonalitet: Klikk på en rapportrad for å vise et innebygd kart under raden.
    Vis en liten pil til venstre som peker høyre når kartet er skjult og ned når det vises.
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "Reviewed Reports";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<style>
    /* Visuell indikasjon at raden er klikkbar */
    .report-expandable { cursor: pointer; }

    /* Arrow column */
    .arrow-cell { width: 32px; text-align: center; vertical-align: middle; }
    .row-arrow {
        display: inline-block;
        font-size: 0.9rem;
        line-height: 1;
        user-select: none;
        transition: transform 0.12s ease;
        color: #2d5016;
    }
    .row-arrow::before { content: '▶'; display: inline-block; transform-origin: center; }
    .row-arrow.open::before { content: '▼'; }

    .map-container { height: 300px; width: 100%; }
    .map-row td { padding: 0.5rem; background: #f8f9fa; }
</style>

<div class="container mt-4">
    <h2 style="color: #2d5016;">Reviewed Reports</h2>

    @* Filter- og sorteringsknapper *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                @* Venstre kolonne: Status-filter *@
                <div class="col-md-6 mb-3 mb-md-0">
                    <label class="fw-bold mb-2" style="color: #2d5016;">Filter by status:</label>
                    <div class="btn-group" role="group">
                        @* asp-route-filterBy, asp-route-sort og asp-route-desc sender parametere til controller *@
                        @* Beholder sortering når man endrer filter *@
                        <a asp-action="ReviewedReports" asp-route-filterBy="all" asp-route-sort="@ViewBag.SortBy" asp-route-desc="@ViewBag.Desc" class="btn btn-sm @(ViewBag.FilterBy == "all" ? "btn-success" : "btn-outline-success")">All</a>
                        <a asp-action="ReviewedReports" asp-route-filterBy="approved" asp-route-sort="@ViewBag.SortBy" asp-route-desc="@ViewBag.Desc" class="btn btn-sm @(ViewBag.FilterBy == "approved" ? "btn-success" : "btn-outline-success")">Approved</a>
                        <a asp-action="ReviewedReports" asp-route-filterBy="rejected" asp-route-sort="@ViewBag.SortBy" asp-route-desc="@ViewBag.Desc" class="btn btn-sm @(ViewBag.FilterBy == "rejected" ? "btn-danger" : "btn-outline-danger")">Rejected</a>
                    </div>
                </div>

                @* Høyre kolonne: Sortering *@
                <div class="col-md-6">
                    <label class="fw-bold mb-2" style="color: #2d5016;">Sort by:</label>
                    <div class="btn-group" role="group">
                        @* Beholder filter når man endrer sortering. Klikker man samme sort igjen toggles asc/desc *@
                        <a asp-action="ReviewedReports" asp-route-filterBy="@ViewBag.FilterBy" asp-route-sort="date" asp-route-desc="@(ViewBag.SortBy == "date" ? !(bool)ViewBag.Desc : false)" class="btn btn-sm @(ViewBag.SortBy == "date" ? "btn-success" : "btn-outline-success")">
                            Date
                            <span class="ms-1">@((ViewBag.SortBy == "date") ? ((bool)ViewBag.Desc ? "▼" : "▲") : "")</span>
                        </a>
                        <a asp-action="ReviewedReports" asp-route-filterBy="@ViewBag.FilterBy" asp-route-sort="user" asp-route-desc="@(ViewBag.SortBy == "user" ? !(bool)ViewBag.Desc : false)" class="btn btn-sm @(ViewBag.SortBy == "user" ? "btn-success" : "btn-outline-success")">
                            User
                            <span class="ms-1">@((ViewBag.SortBy == "user") ? ((bool)ViewBag.Desc ? "▼" : "▲") : "")</span>
                        </a>
                        <a asp-action="ReviewedReports" asp-route-filterBy="@ViewBag.FilterBy" asp-route-sort="obstacle" asp-route-desc="@(ViewBag.SortBy == "obstacle" ? !(bool)ViewBag.Desc : false)" class="btn btn-sm @(ViewBag.SortBy == "obstacle" ? "btn-success" : "btn-outline-success")">
                            Obstacle
                            <span class="ms-1">@((ViewBag.SortBy == "obstacle") ? ((bool)ViewBag.Desc ? "▼" : "▲") : "")</span>
                        </a>
                        <a asp-action="ReviewedReports" asp-route-filterBy="@ViewBag.FilterBy" asp-route-sort="status" asp-route-desc="@(ViewBag.SortBy == "status" ? !(bool)ViewBag.Desc : false)" class="btn btn-sm @(ViewBag.SortBy == "status" ? "btn-success" : "btn-outline-success")">
                            Status
                            <span class="ms-1">@((ViewBag.SortBy == "status") ? ((bool)ViewBag.Desc ? "▼" : "▲") : "")</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">No reviewed reports found.</div>
    }
    else
    {
        @* Tabell med reviewed rapporter (read-only, ingen handlingsknapper) *@
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: #2d5016; color: white;">
                        <tr>
                            <th></th>
                            <th>Date</th>
                            <th>User</th>
                            <th>Obstacle Type</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var safeId = item.ReportId.Replace("\"", "").Replace("'", "").Replace(" ", "_");
                            <tr class="report-expandable" data-report-id="@safeId" title="Click to toggle map view">
                                <td class="arrow-cell"><span class="row-arrow" aria-hidden="true"></span></td>
                                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.User?.UserName</td>
                                <td>@item.ObstacleType?.ObstacleName</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <td>
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span>@item.Latitude.Value.ToString("F6"), @item.Longitude.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @* Viser status med ikon *@
                                    @if (item.Status == "Approved")
                                    {
                                        <span class="badge bg-success">✓ Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">✗ Rejected</span>
                                    }
                                </td>
                            </tr>

                            @* Hidden row that contains the map (collapsed by default) *@
                            <tr class="map-row" id="map-row-@safeId" style="display: none;">
                                <td colspan="7">
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        var latJs = item.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                                        var lonJs = item.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                                        <div id="map-@safeId" class="map-container" data-lat="@latJs" data-lon="@lonJs"></div>
                                    }
                                    else
                                    {
                                        <div class="text-muted">No location provided for this report.</div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<script>
    // Initialize map instances on demand.
    (function () {
        const maps = {}; // store Leaflet instances by container id (e.g. 'map-REPORTID')

        function createMap(containerId, lat, lon) {
            if (maps[containerId]) return maps[containerId];

            const map = L.map(containerId).setView([lat, lon], 16);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);
            L.marker([lat, lon]).addTo(map);
            maps[containerId] = map;
            return map;
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.report-expandable').forEach(function (row) {
                row.addEventListener('click', function () {
                    const id = row.getAttribute('data-report-id');
                    const mapRow = document.getElementById('map-row-' + id);
                    if (!mapRow) return;

                    const arrow = row.querySelector('.row-arrow');
                    const computed = window.getComputedStyle(mapRow);
                    const isHidden = computed.display === 'none';

                    if (isHidden) {
                        // show as table row (ensures proper display for <tr>)
                        mapRow.style.display = 'table-row';
                        if (arrow) arrow.classList.add('open');

                        // initialize map if needed
                        const mapDiv = document.getElementById('map-' + id);
                        if (mapDiv && !maps['map-' + id]) {
                            const lat = parseFloat(mapDiv.getAttribute('data-lat'));
                            const lon = parseFloat(mapDiv.getAttribute('data-lon'));
                            // small timeout to ensure container has layout
                            setTimeout(function () {
                                const map = createMap('map-' + id, lat, lon);
                                // ensures tiles render correctly after becoming visible
                                setTimeout(function () { map.invalidateSize(); }, 200);
                            }, 50);
                        } else if (maps['map-' + id]) {
                            // if map exists, ensure size is correct after showing
                            setTimeout(function () { maps['map-' + id].invalidateSize(); }, 100);
                        }
                    } else {
                        // hide
                        mapRow.style.display = 'none';
                        if (arrow) arrow.classList.remove('open');
                    }
                });
            });
        });
    })();
</script>