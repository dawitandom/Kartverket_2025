@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "All reports (Admin)";
}

<div class="container mt-4">
    <h2>All reports</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="mb-3">
        <label>Sorter etter:</label>
        <div class="btn-group" role="group">
            <a asp-action="List" asp-route-sortBy="date" class="btn btn-sm @(ViewBag.SortBy == "date" ? "btn-primary" : "btn-outline-primary")">Dato</a>
            <a asp-action="List" asp-route-sortBy="user" class="btn btn-sm @(ViewBag.SortBy == "user" ? "btn-primary" : "btn-outline-primary")">Bruker</a>
            <a asp-action="List" asp-route-sortBy="obstacle" class="btn btn-sm @(ViewBag.SortBy == "obstacle" ? "btn-primary" : "btn-outline-primary")">Hindring</a>
            <a asp-action="List" asp-route-sortBy="status" class="btn btn-sm @(ViewBag.SortBy == "status" ? "btn-primary" : "btn-outline-primary")">Status</a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No reports found</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Obstacle</th>
                    <th>Description</th>
                    <th>Position</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.User?.UserName</td>
                        <td>@item.ObstacleType?.ObstacleName</td>
                        <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                        <td>@item.Latitude?.ToString("F6"), @item.Longitude?.ToString("F6")</td>
                        <td>
                            @if (item.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (item.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Waiting</span>
                            }
                        </td>
                        <td>
                            @if (item.Status != "Approved")
                            {
                                <form asp-action="Approve" method="post" class="d-inline">
                                    <input type="hidden" name="reportId" value="@item.ReportId" />
                                    <button type="submit" class="btn btn-sm btn-success">Accept</button>
                                </form>
                            }
                            @if (item.Status != "Rejected")
                            {
                                <form asp-action="Reject" method="post" class="d-inline">
                                    <input type="hidden" name="reportId" value="@item.ReportId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Decline</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>