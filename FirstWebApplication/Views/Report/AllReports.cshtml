@*
    Admin overview: show all reports in a single table with a Status column.
    Filtering (Status + ReportId partial match) and sorting (Status).
    Filtering is automatic — changes submit the GET form automatically (debounced).
*@
@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "All Reports (Admin)";
    var reports = (Model ?? Enumerable.Empty<FirstWebApplication.Models.Report>()).ToList();

    // Leser rå tilstand satt av controller
    var rawFilterStatus = ViewBag.FilterStatus as string;
    // HENT roller fra ViewBag (fylt i controller med GetUserRolesLookup())
    var rolesLookup = ViewBag.UserRoles as IDictionary<string, List<string>>;

    // Finn “primærrolle” å vise i tabellen
    string GetPrimaryRole(string uid)
    {
        if (string.IsNullOrEmpty(uid) || rolesLookup == null || !rolesLookup.ContainsKey(uid))
            return "—";

        var list = rolesLookup[uid];
        // Foretrekk rollene i denne rekkefølgen hvis de finnes
        var preferred = new[] { "Pilot", "Entrepreneur", "DefaultUser", "Registrar", "Admin" };
        var hit = preferred.FirstOrDefault(r => list.Contains(r));
        return hit ?? (list.FirstOrDefault() ?? "—");
    }

    // Normaliserer for UI: behandler null/tom som "all" (controller behandler "all" som ingen filter)
    var currentFilterStatus = string.IsNullOrWhiteSpace(rawFilterStatus) ? "all" : rawFilterStatus!;
    var currentFilterId = (ViewBag.FilterId as string) ?? string.Empty;

    // MERK: "date" er fjernet som sorteringsalternativ i UI - standard er "status"
    var currentSort = (ViewBag.SortBy as string) ?? "status";
    bool currentDesc = ViewBag.Desc is bool b ? b : true;

    // Hjelpefunksjon for å toggle synkende når samme sortering klikkes
    bool NextDesc(string sortKey) => string.Equals(currentSort, sortKey, StringComparison.OrdinalIgnoreCase) ? !currentDesc : false;
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports-table.css" asp-append-version="true" />
}

<div class="container mt-4">
    <h2 style="color: #2d5016;">All Reports (Admin)</h2>

    @* Kort med filter-knapp til venstre og søk til høyre *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row gx-5 align-items-start">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center gap-2">
                        <button id="filterPopoverBtn" type="button" class="btn btn-sm btn-outline-success" aria-haspopup="true" aria-expanded="false" title="Filter by status:">
                            <i class="bi bi-funnel-fill me-1" aria-hidden="true"></i> Filter
                        </button>
                    </div>

                    @* Skjult filter-popover innhold fra server (status-lenker) *@
                    <div id="filter-popover-content" class="d-none" style="min-width:220px;">
                        <div class="filter-popover-content">
                            <div class="filter-popover-section">
                                <div class="section-title">Status</div>
                                <div class="filter-buttons-row">
                                    <a asp-action="AllReports"
                                       asp-route-filterStatus="all"
                                       asp-route-filterId="@currentFilterId"
                                       asp-route-sort="@currentSort"
                                       asp-route-desc="@(currentDesc)"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "all", StringComparison.OrdinalIgnoreCase) ? "btn-success" : "btn-outline-success")">All</a>

                                    <a asp-action="AllReports"
                                       asp-route-filterStatus="Pending"
                                       asp-route-filterId="@currentFilterId"
                                       asp-route-sort="@currentSort"
                                       asp-route-desc="@(currentDesc)"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Pending", StringComparison.OrdinalIgnoreCase) ? "btn-warning text-dark" : "btn-outline-warning text-dark")">Pending</a>

                                    <a asp-action="AllReports"
                                       asp-route-filterStatus="Approved"
                                       asp-route-filterId="@currentFilterId"
                                       asp-route-sort="@currentSort"
                                       asp-route-desc="@(currentDesc)"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Approved", StringComparison.OrdinalIgnoreCase) ? "btn-success" : "btn-outline-success")">Approved</a>

                                    <a asp-action="AllReports"
                                       asp-route-filterStatus="Rejected"
                                       asp-route-filterId="@currentFilterId"
                                       asp-route-sort="@currentSort"
                                       asp-route-desc="@(currentDesc)"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Rejected", StringComparison.OrdinalIgnoreCase) ? "btn-danger" : "btn-outline-danger")">Rejected</a>

                                    <a asp-action="AllReports"
                                       asp-route-filterStatus="Draft"
                                       asp-route-filterId="@currentFilterId"
                                       asp-route-sort="@currentSort"
                                       asp-route-desc="@(currentDesc)"
                                       class="btn btn-sm @(string.Equals(currentFilterStatus, "Draft", StringComparison.OrdinalIgnoreCase) ? "btn-secondary" : "btn-outline-secondary")">Draft</a>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a asp-action="AllReports" asp-route-filterStatus="all" asp-route-filterId="" asp-route-sort="@currentSort" asp-route-desc="@(currentDesc)" class="btn btn-sm btn-outline-dark">Reset</a>
                            </div>
                        </div>
                    </div>
                </div>

                @* Høyre kolonne inneholder søkeskjema, slik at tekstboksen er inne i kortet *@
                <div class="col-md-6 d-flex justify-content-end align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <form id="filterForm" asp-action="AllReports" method="get" class="d-flex ms-3">
                            <input id="filterIdInput" type="text" name="filterId" class="form-control form-control-sm filter-search me-2" placeholder="Search ID..." value="@currentFilterId" autocomplete="off" />
                            @* Beholder nåværende status og sortering når søk sendes *@
                            <input type="hidden" name="filterStatus" value="@currentFilterStatus" />
                            <input type="hidden" name="sort" value="@currentSort" />
                            <input type="hidden" name="desc" value="@(currentDesc.ToString().ToLowerInvariant())" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Globale suksess- og feilmeldinger *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="table-responsive">
            @if (!reports.Any())
            {
                <div class="card-body">
                    <div class="alert alert-info shadow-sm mb-0">No reports found.</div>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead style="background-color: #2d5016; color: white;">
                        <tr>
                            <th class="report-id-header">
                                @* Rapport ID overskrift - ingen sorteringslenke lenger *@
                                <span class="fw-semibold">Report ID</span>
                            </th>
                            <th>Date</th>
                            <th>User</th>
                            <th>Role</th>
                            <th>Obstacle Type</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>
                                @* Status overskrift med sorteringslenke (status-sortering støttes fortsatt) *@
                                <a asp-action="AllReports"
                                   asp-route-filterStatus="@currentFilterStatus"
                                   asp-route-filterId="@currentFilterId"
                                   asp-route-sort="status"
                                   asp-route-desc="@(NextDesc("status"))"
                                   class="text-white text-decoration-none" aria-label="Sort by Status">
                                    <span class="fw-semibold">Status</span>
                                    @if (string.Equals(currentSort, "status", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="ms-1">@(currentDesc ? "▼" : "▲")</span>
                                    }
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in reports)
                        {
                            var desc = item.Description ?? string.Empty;
                            <tr>
                                <td class="report-id">
                                    <span title="@item.ReportId">@item.ReportId</span>
                                </td>
                                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.User?.UserName</td>
                                <td><span class="badge bg-secondary">@GetPrimaryRole(item.UserId)</span></td>
                                <td>@item.ObstacleType?.ObstacleName</td>
                                <td>@(desc.Length > 100 ? desc.Substring(0, 100) + "..." : desc)</td>
                                <td>
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span>@item.Latitude.Value.ToString("F6"), @item.Longitude.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (string.Equals(item.Status, "Approved", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (string.Equals(item.Status, "Rejected", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else if (string.Equals(item.Status, "Pending", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a asp-action="Details" asp-route-id="@item.ReportId" class="btn btn-sm btn-outline-primary">Details</a>

                                        @* Kun Admin kan slette (controller har allerede Authorize(Roles = "Admin")) *@
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-action="Delete" method="post" class="d-inline"
                                                  onsubmit="return confirm('Delete report @item.ReportId? This action cannot be undone.');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ReportId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filter.popover.js" asp-append-version="true"></script>
}