@using System.Security.Claims
@model FirstWebApplication.Models.Report
@{
    ViewData["Title"] = "Details";
    string obstacleName = Model?.ObstacleType?.ObstacleName ?? Model?.ObstacleId ?? "-";
    string status = string.IsNullOrWhiteSpace(Model?.Status) ? "Pending" : Model.Status!;
    string createdAt = (Model?.DateTime == default ? null : Model?.DateTime)?.ToString("dd.MM.yyyy HH:mm") ?? "-";
    string lastUpdated = Model?.LastUpdated?.ToString("dd.MM.yyyy HH:mm") ?? null;
    string reportId = Model?.ReportId ?? "Tom";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

@section Styles {
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
}

<input type="hidden" id="geometryHidden" value="@Model.Geometry" />


<div class="details-page container-narrow">

    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-info-circle"></i> Details</h2>
    </div>

    @* MAP: vises alltid når koordinater finnes *@
    @if (Model?.Latitude.HasValue == true && Model?.Longitude.HasValue == true)
    {
        <div id="mapWrap" class="mb-3">
            <div id="detailMap" class="rounded shadow-sm"></div>
            <input type="hidden" id="geometryHidden" value="@Model.Geometry" />
        </div>
    }
    else
    {
        <div class="alert alert-light border d-flex align-items-center gap-2 mb-3">
            <i class="bi bi-info-circle"></i>
            <div>No map available – coordinates are missing.</div>
        </div>
    }


    <!-- Card -->
    <div class="card shadow-sm">
        <div class="card-header d-flex flex-wrap gap-2 align-items-center justify-content-between">
            <div class="h5 mb-0">
                Report <span class="text-muted">#@Model?.ReportId</span>
            </div>
            <span class="badge @GetStatusBadgeClass(status) px-3 py-2">@status</span>
        </div>

        <div class="card-body">
            <dl class="row dl-clean mb-0">
                <dt class="col-12 col-md-4">Obstacle type</dt>
                <dd class="col-12 col-md-8">@obstacleName</dd>

                <dt class="col-12 col-md-4">Description</dt>
                <dd class="col-12 col-md-8">@Model?.Description</dd>

                <dt class="col-12 col-md-4">Coordinates</dt>
                <dd class="col-12 col-md-8">
                    @{
                        var hasLat = Model?.Latitude.HasValue == true;
                        var hasLng = Model?.Longitude.HasValue == true;
                        if (hasLat && hasLng)
                        {
                            <span>@($"{Model.Latitude:F6}, {Model.Longitude:F6}")</span>
                        }
                        else
                        {

                            <span class="text-muted">-</span>
                            ;
                        }
                    }
                </dd>

                <dt class="col-12 col-md-4">Height (ft)</dt>
                <dd class="col-12 col-md-8">@((Model?.HeightFeet.HasValue == true) ? Model.HeightFeet : "-")</dd>

                <dt class="col-12 col-md-4">Created</dt>
                <dd class="col-12 col-md-8">@createdAt</dd>

                @if (!string.IsNullOrWhiteSpace(lastUpdated))
                {
                    <dt class="col-12 col-md-4">Last updated</dt>
                    <dd class="col-12 col-md-8">@lastUpdated</dd>
                }

                <dt class="col-12 col-md-4">Status</dt>
                <dd class="col-12 col-md-8">@status</dd>
                
                @if (!string.IsNullOrWhiteSpace(Model?.RegistrarComment))
                {
                    <dt class="col-12 col-md-4">Registrar comment</dt>
                    <dd class="col-12 col-md-8">@Model.RegistrarComment</dd>
                }
            </dl>

            <hr class="my-4" />

            <div class="d-flex flex-wrap gap-2">
                <!-- Back button -->
                <a asp-action="MyReports" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> Back to My Reports
                </a>

                @{
                    // Eierskap + status-sjekk for å vise Edit
                    var isOwnerRole = User.IsInRole("Pilot") || User.IsInRole("Entrepreneur") || User.IsInRole("DefaultUser");
                    var isOwner = Model?.UserId == currentUserId;
                    var canEdit = isOwnerRole && isOwner &&
                                  (Model?.Status == "Draft" || Model?.Status == "Pending");
                }

                @* EDIT-knapp: eier (Pilot/Entrepreneur/DefaultUser) kan redigere Draft + Pending,
       Registrar/Admin kan alltid redigere *@
                @if (canEdit || User.IsInRole("Registrar") || User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model?.ReportId" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                }

                @* Delete: Admin alltid. Eier kan slette Draft + Pending *@
                @if (
                    User.IsInRole("Admin") ||
                    (
                        (User.IsInRole("Pilot") || User.IsInRole("Entrepreneur"))
                        && Model?.UserId == currentUserId
                        && (Model.Status == "Draft" || Model.Status == "Pending")
                    )
                )
                {
                    <form asp-action="Delete" asp-route-id="@Model?.ReportId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Delete report @Model?.ReportId?');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string s) => s?.ToLower() switch
    {
        "approved" => "text-bg-success",
        "rejected" => "text-bg-danger",
        _ => "text-bg-secondary"
    };
}

@section Scripts {
    <script>
        (function () {
            // Laster Leaflet (kun én gang)
            function loadLeaflet(cb) {
                if (window.L) { cb(); return; }

                var link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.css';
                document.head.appendChild(link);

                var s = document.createElement('script');
                s.src = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js';
                s.onload = cb;
                document.body.appendChild(s);
            }

            const wrap = document.getElementById('mapWrap');
            const mapEl = document.getElementById('detailMap');
            if (!wrap || !mapEl) return; // Ingen kart hvis ingen koordinater

            const lat = parseFloat("@(Model!.Latitude!.Value.ToString(System.Globalization.CultureInfo.InvariantCulture))");
            const lng = parseFloat("@(Model!.Longitude!.Value.ToString(System.Globalization.CultureInfo.InvariantCulture))");

            function initMap() {
                const map = L.map(mapEl, { zoomControl: true }).setView([lat, lng], 14);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);

                // Prøv å lese Geometry (figur) fra hidden felt
                const geomValue = document.getElementById("geometryHidden")?.value;
                let layer = null;

                if (geomValue) {
                    try {
                        const geo = JSON.parse(geomValue);
                        const toLatLng = (c) => L.latLng(c[1], c[0]);

                        switch (geo.type) {
                            case "Point":
                                if (Array.isArray(geo.coordinates) && geo.coordinates[0]) {
                                    layer = L.marker(toLatLng(geo.coordinates[0]));
                                }
                                break;

                            case "LineString":
                                if (Array.isArray(geo.coordinates)) {
                                    layer = L.polyline(geo.coordinates.map(toLatLng));
                                }
                                break;

                            case "Polygon":
                            case "Rectangle":
                                if (Array.isArray(geo.coordinates) && Array.isArray(geo.coordinates[0])) {
                                    layer = L.polygon(geo.coordinates[0].map(toLatLng));
                                }
                                break;

                            case "Circle":
                                if (Array.isArray(geo.coordinates) && Array.isArray(geo.coordinates[0])) {
                                    const [lngC, latC] = geo.coordinates[0];
                                    const radius = geo.radius || 200;
                                    layer = L.circle([latC, lngC], { radius: radius });
                                }
                                break;
                        }
                    } catch (e) {
                        console.error("Could not parse Geometry JSON in Details:", e);
                    }
                }

                if (layer) {
                    layer.addTo(map);

                    if (typeof layer.getBounds === "function") {
                        map.fitBounds(layer.getBounds(), { padding: [20, 20] });
                    } else if (typeof layer.getLatLng === "function") {
                        map.setView(layer.getLatLng(), 14);
                    }
                } else {
                    // Fallback: bare et punkt
                    L.marker([lat, lng]).addTo(map);
                }

                // Sørg for riktig kartstørrelse
                setTimeout(() => map.invalidateSize(), 120);

                // Klikk = expand / shrink
                mapEl.addEventListener('click', function () {
                    mapEl.classList.toggle('expanded');
                    setTimeout(() => map.invalidateSize(), 260);
                }, { passive: true });
            }

            // Start
            loadLeaflet(initMap);
        })();
    </script>
}
