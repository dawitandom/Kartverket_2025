
@model FirstWebApplication.Models.Report

@{
    ViewData["Title"] = "Report Submitted";
}

<div class="container mt-5">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">✓ Report Successfully Submitted!</h4>
        <p>Your obstacle report has been successfully created.</p>
    </div>
    
    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                <h5>Report Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Report ID:</dt>
                    <dd class="col-sm-9">@Model.ReportId</dd>
                    
                    <dt class="col-sm-3">User ID:</dt>
                    <dd class="col-sm-9">@Model.UserId</dd>
                    
                    <dt class="col-sm-3">Location:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                        {
                            @($"Lat: {Model.Latitude:F6}, Lon: {Model.Longitude:F6}")
                        }
                        else
                        {
                            <text>Not specified</text>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Altitude:</dt>
                    <dd class="col-sm-9">@(Model.AltitudeFeet?.ToString() ?? "Not specified") feet</dd>
                    
                    <dt class="col-sm-3">Obstacle Type:</dt>
                    <dd class="col-sm-9">@Model.ObstacleType?.ObstacleName</dd>
                    
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                    
                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                </dl>
            </div>
        </div>
    }
    
    <div class="mt-4">
        <a asp-action="Scheme" class="btn btn-primary">Create Another Report</a>
        <a asp-action="List" class="btn btn-secondary">View All Reports</a>
    </div>
</div>