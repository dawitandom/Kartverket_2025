@* 
    Viser liste over pilotens egne rapporter.
    Kun tilgjengelig for piloter (User rolle).
    Filtrert på innlogget brukers UserId i ReportController.MyReports().
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "My reports";
}

@* Samme stil på reportID som på AllReports *@
<style> 
  th.report-id-header { min-width: 12ch; width: 12ch; }
  td.report-id {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Courier New", monospace;
    font-weight: 600;
    font-size: .95rem;
    color: #13430f;
    background: rgba(45,80,22,0.05);
    padding: .35rem .5rem;
    border-radius: .25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 12ch;
  }
</style>

<div class="container mt-4">
    @* Header med tittel og knapp for å opprette ny rapport *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My reports</h2>
        <a asp-action="Scheme" class="btn btn-primary">Add reports</a>
    </div>

    @* Suksessmelding etter opprettelse av rapport *@
    @* TempData lagres kun for én request og slettes deretter *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @* Viser melding hvis brukeren ikke har noen rapporter ennå *@
    @if (!Model.Any())
    {
        <div class="alert alert-info">You have not submitted any reports yet.</div>
    }
    else
    {
        @* Tabell med alle brukerens rapporter *@
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="report-id-header"><span class="fw-semibold">Report ID</span></th>
                <th>Date</th>
                <th>Obstacle</th>
                <th>Description</th>
                <th>Position</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="report-id">
                            <span title="@r.ReportId">@r.ReportId</span>
                        </td>
                        <td>@r.DateTime.ToString("dd.MM.yyyy HH:mm")</td>

                        <td>@r.ObstacleType?.ObstacleName</td>

                        @{
                            var desc = r.Description ?? string.Empty;
                        }
                        <td>@(desc.Length > 50 ? desc.Substring(0, 50) + "…" : desc)</td>

                        <td>
                            @{
                                var lat = r.Latitude;
                                var lng = r.Longitude;
                            }
                            @if (lat.HasValue && lng.HasValue)
                            {
                                @($"{lat.Value:F6}, {lng.Value:F6}")
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </td>

                        <td>
                            @if (r.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (r.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else if (r.Status == "Draft")
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                        </td>

                        <td class="text-end">
                            @if (r.Status == "Draft")
                            {
                                <!-- Endret: btn-warning -> btn-secondary for å matche 'Draft' -->
                                <a asp-action="Edit" asp-route-id="@r.ReportId" class="btn btn-secondary btn-sm">
                                    Continue
                                </a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@r.ReportId" class="btn btn-primary btn-sm">
                                    Details
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
