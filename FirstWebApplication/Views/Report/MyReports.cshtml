
@* 
    Viser liste over pilotens egne rapporter.
    Kun tilgjengelig for piloter (User rolle).
    Filtrert på innlogget brukers UserId i ReportController.MyReports().
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "Mine rapporter";
}

<div class="container mt-4">
    @* Header med tittel og knapp for å opprette ny rapport *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mine rapporter</h2>
        <a asp-action="Scheme" class="btn btn-primary">Legg til ny rapport</a>
    </div>

    @* Suksessmelding etter opprettelse av rapport *@
    @* TempData lagres kun for én request og slettes deretter *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @* Viser melding hvis brukeren ikke har noen rapporter ennå *@
    @if (!Model.Any())
    {
        <div class="alert alert-info">Du har ikke lagt inn noen rapporter ennå.</div>
    }
    else
    {
        @* Tabell med alle brukerens rapporter *@
        <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Dato</th>
            <th>Hindring</th>
            <th>Beskrivelse</th>
            <th>Posisjon</th>
            <th>Status</th>
            <th class="text-end">Handlinger</th> @* NY *@
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.DateTime.ToString("dd.MM.yyyy HH:mm")</td>

                <td>@r.ObstacleType?.ObstacleName</td>

                <td>
                    @{
                        var desc = r.Description ?? "";
                        @:(desc.Length > 50 ? desc.Substring(0, 50) + "..." : desc)
                    }
                </td>

                <td>@r.Latitude?.ToString("F6"), @r.Longitude?.ToString("F6")</td>

                <td>
                    @if (r.Status == "Approved")
                    {
                        <span class="badge bg-success">Godkjent</span>
                    }
                    else if (r.Status == "Rejected")
                    {
                        <span class="badge bg-danger">Avslått</span>
                    }
                    else if (r.Status == "Draft")
                    {
                        <span class="badge bg-secondary">Kladd</span> @* NY *@
                    }
                    else
                    {
                        <span class="badge bg-warning">Venter</span> @* Pending *@
                    }
                </td>

                <td class="text-end">
                    @if (r.Status == "Draft")
                    {
                        <a asp-action="Edit" asp-route-id="@r.ReportId" class="btn btn-warning btn-sm">Fortsett</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@r.ReportId" class="btn btn-outline-primary btn-sm">Detaljer</a>
                    }
                </td>
            </tr>
        }
            </tbody>
        </table>


    }
</div>