@* 
    Viser liste over pilotens egne rapporter.
    Kun tilgjengelig for piloter (User rolle).
    Filtrert på innlogget brukers UserId i ReportController.MyReports().
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "My reports";
}

@section Styles {
    <link rel="stylesheet" href="~/css/myreports.css" asp-append-version="true" />
}

<div class="container mt-4">
    @* Header med tittel og knapp for å opprette ny rapport *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My reports</h2>
        <a asp-action="Scheme" class="btn btn-primary">Add reports</a>
    </div>

    @* Suksessmelding etter opprettelse av rapport *@
    @* TempData lagres kun for én request og slettes deretter *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @* Viser melding hvis brukeren ikke har noen rapporter ennå *@
    @if (!Model.Any())
    {
        <div class="alert alert-info">You have not submitted any reports yet.</div>
    }
    else
    {
        @* Tabell med alle brukerens rapporter *@
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="report-id-header"><span class="fw-semibold">Report ID</span></th>
                <th>Date</th>
                <th>Obstacle</th>
                <th>Description</th>
                <th>Position</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="report-id">
                            <span title="@r.ReportId">@r.ReportId</span>
                        </td>
                        <td>@r.DateTime.ToString("dd.MM.yyyy HH:mm")</td>

                        <td>@r.ObstacleType?.ObstacleName</td>

                        @{
                            var desc = r.Description ?? string.Empty;
                        }
                        <td>@(desc.Length > 50 ? desc.Substring(0, 50) + "…" : desc)</td>

                        <td>
                            @{
                                var lat = r.Latitude;
                                var lng = r.Longitude;
                            }
                            @if (lat.HasValue && lng.HasValue)
                            {
                                @($"{lat.Value:F6}, {lng.Value:F6}")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>

                        <td>
                            @if (r.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (r.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else if (r.Status == "Draft")
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                        </td>

                        <td class="text-end">
                            @* Draft → Continue *@
                            @if (r.Status == "Draft")
                            {
                                <a asp-action="Edit" asp-route-id="@r.ReportId" class="btn btn-secondary btn-sm me-1">
                                    Continue
                                </a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@r.ReportId" class="btn btn-primary btn-sm me-1">
                                    Details
                                </a>
                            }

                            @* Pilot kan slette Draft og Pending *@
                            @if (r.Status == "Draft" || r.Status == "Pending")
                            {
                                <form method="post"
                                      asp-action="Delete"
                                      asp-route-id="@r.ReportId"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-danger btn-sm text-white"
                                            title="Delete report"
                                            onclick="return confirm('Delete report @r.ReportId?');">
                                        Delete
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
