
@* 
    Viser liste over pilotens egne rapporter.
    Kun tilgjengelig for piloter (User rolle).
    Filtrert på innlogget brukers UserId i ReportController.MyReports().
*@

@model IEnumerable<FirstWebApplication.Models.Report>
@{
    ViewData["Title"] = "Mine rapporter";
}

<div class="container mt-4">
    @* Header med tittel og knapp for å opprette ny rapport *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mine rapporter</h2>
        <a asp-action="Scheme" class="btn btn-primary">Legg til ny rapport</a>
    </div>

    @* Suksessmelding etter opprettelse av rapport *@
    @* TempData lagres kun for én request og slettes deretter *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @* Viser melding hvis brukeren ikke har noen rapporter ennå *@
    @if (!Model.Any())
    {
        <div class="alert alert-info">Du har ikke lagt inn noen rapporter ennå.</div>
    }
    else
    {
        @* Tabell med alle brukerens rapporter *@
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Dato</th>
                    <th>Hindring</th>
                    <th>Beskrivelse</th>
                    <th>Posisjon</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @* Formaterer dato til norsk format (dd.MM.yyyy HH:mm) *@
                        <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                        
                        @* ObstacleType kan være null hvis ikke lastet med Include() *@
                        @* ? operatoren unngår null reference exception *@
                        <td>@item.ObstacleType?.ObstacleName</td>
                        
                        @* Kutter beskrivelsen til 50 tegn hvis den er lengre *@
                        @* Ternary operator: betingelse ? hvis_sann : hvis_usann *@
                        <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                        
                        @* Viser koordinater med 6 desimaler (F6 format) *@
                        <td>@item.Latitude?.ToString("F6"), @item.Longitude?.ToString("F6")</td>
                        
                        @* Viser status som farget badge *@
                        <td>
                            @if (item.Status == "Approved")
                            {
                                <span class="badge bg-success">Godkjent</span>
                            }
                            else if (item.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Avslått</span>
                            }
                            else
                            {
                                @* Status "Pending" - venter på admin *@
                                <span class="badge bg-warning">Venter</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>