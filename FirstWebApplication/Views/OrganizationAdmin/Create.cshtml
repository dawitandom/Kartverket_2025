@model FirstWebApplication.Models.Organization
@{
    ViewData["Title"] = "Create Organization";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header-kartverket">
                    <h3 class="mb-0">âž• Create New Organization</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortCode" class="form-label fw-bold"></label>
                            <input asp-for="ShortCode" class="form-control" placeholder="e.g. NLA, LFS, PHT" />
                            <span asp-validation-for="ShortCode" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-kartverket-primary btn-lg">
                                Create Organization
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-muted small mt-2">
                Organizations are used to group users and reports (e.g. NLA, Luftforsvaret, PHT).
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
