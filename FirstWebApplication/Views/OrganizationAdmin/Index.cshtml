@model IEnumerable<FirstWebApplication.Models.Organization>

@{
    ViewData["Title"] = "Manage organizations";
}

<style>
    /* Hindrer at knappen brytes i h√∏yden */
    .org-actions {
        white-space: nowrap;
    }
</style>

<div class="container py-4">
    <!-- Topp: tittel + "Create organization"-knapp -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Organizations</h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New Organization
        </a>

    </div>

    <!-- TempData-meldinger (samme stil som ManageUsers) -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Kort med tabell (samme layout-feel som ManageUsers) -->
    <div class="card shadow-sm">
        <div class="card-header">
            <strong>All organizations</strong>
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="p-3">
                    <p class="mb-0 text-muted">No organizations found.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Short code</th>
                                <!-- Ikke smal kolonne her, la den bli litt bred -->
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var org in Model)
                        {
                            <tr>
                                <td>@org.Name</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @org.ShortCode
                                    </span>
                                </td>
                                <td class="org-actions text-end">
                                    <a asp-action="CreateOrgAdmin"
                                       asp-route-id="@org.OrganizationId"
                                       class="btn btn-outline-primary btn-sm">
                                        Create org admin
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
