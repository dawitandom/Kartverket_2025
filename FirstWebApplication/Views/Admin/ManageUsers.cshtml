@model IEnumerable<FirstWebApplication.Models.UserManagementViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Users</h2>

        <a asp-action="CreateUser" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New User
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show py-2" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show py-2" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Organizations</th>  @* NEW *@
                            <th>Roles</th>
                            <th style="width: 110px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        // Litt styling for Admin-raden slik du allerede har (grå bakgrunn)
                        var isAdmin = user.Roles.Contains("Admin");
                        <tr class="@(isAdmin ? "table-secondary" : "")">
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@($"{user.FirstName} {user.LastName}")</td>

                            <!-- Organizations -->
                            <td>
                                @if (user.Organizations != null && user.Organizations.Any())
                                {
                                    foreach (var org in user.Organizations)
                                    {
                                        <span class="badge bg-secondary me-1">@org</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <!-- Roles -->
                            <td>
                                @if (user.Roles != null && user.Roles.Any())
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-success me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <td>
                                <form asp-action="DeleteUser"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit"
                                            class="btn btn-sm btn-danger"
                                            onclick="return confirm('Delete user @user.UserName?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
