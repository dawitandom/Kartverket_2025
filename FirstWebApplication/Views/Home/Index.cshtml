@{
    ViewData["Title"] = "Home";
}

<section class="kv-shell kv-bg">
<div class="kv-frame">

<!-- Hvit hovedboks foran bildebakgrunnen -->
<section class="kv-hero-card">
    <div class="container text-center">
        <h1 class="fw-bold hero-title">Kartverket Obstacle Reporting System</h1>   <!-- grønn -->
        <p class="lead hero-sub">Report and manage aviation obstacles in Norway</p> <!-- svart -->

        @* Viser login + de tre infokortene kun for ikke-innlogget *@
        @if (!(User?.Identity?.IsAuthenticated ?? false))
        {
            <div class="row mt-5 kv-info-row">
                <div class="col-md-4 text-center mb-4">
                    <div class="kv-card-hint">For Pilots</div>
                    <h4 class="mt-2">For Pilots</h4>
                    <p class="text-muted">Report obstacles you discover during flights</p>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="kv-card-hint">For Entrepreneurs</div>
                    <h4 class="mt-2">For Entrepreneurs</h4>
                    <p class="text-muted">Report construction projects that may affect aviation</p>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="kv-card-hint">Verified Data</div>
                    <h4 class="mt-2">Verified Data</h4>
                    <p class="text-muted">All reports are reviewed by Kartverket registrars</p>
                </div>
            </div>
            <!-- Log in button nederst i boksen -->
            <div class="text-center mt-4">
                <a asp-controller="Account" asp-action="Login"
                   class="btn btn-kartverket-primary btn-lg kv-wide-btn">
                    Log in to report obstacle
                </a>
            </div>
        }
    </div>
</section>


<div class="container mt-4 kv-block">
    @if (User.Identity?.IsAuthenticated == true)
    {
        @* Dashboard for Pilot and Entrepreneur *@
        @if (User.IsInRole("Pilot") || User.IsInRole("Entrepreneur"))
        {
            <div class="row">
                <div class="col-md-12 mb-4">
                    <h2 class="card-title-kartverket">Welcome, @(User.IsInRole("Pilot") ? "pilot" : "entrepreneur")!</h2>
                    <p class="text-muted">Quick actions for creating and managing reports</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-green);"></div>
                            <h3 class="card-title mt-3">Create New Report</h3>
                            <p class="card-text text-muted">Report a new obstacle you've discovered</p>
                            <a asp-controller="Report" asp-action="Scheme" class="btn btn-kartverket-primary btn-lg mt-3">
                                Create Report
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-light-green);"></div>
                            <h3 class="card-title mt-3">My Reports</h3>
                            <p class="card-text text-muted">View all your submitted reports</p>
                            <a asp-controller="Report" asp-action="MyReports" class="btn btn-kartverket-secondary btn-lg mt-3">
                                View My Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @* Dashboard for Registrar *@
        @if (User.IsInRole("Registrar"))
        {
            <div class="row">
                <div class="col-md-12 mb-4">
                    <h2 class="card-title-kartverket">Welcome, registrar!</h2>
                    <p class="text-muted">Review and manage submitted reports</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-green);"></div>
                            <h3 class="card-title mt-3">Pending Reports</h3>
                            <p class="card-text text-muted">Review reports waiting for approval</p>
                            <a asp-controller="Report" asp-action="PendingReports" class="btn btn-kartverket-primary btn-lg mt-3">
                                View Pending
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-light-green);"></div>
                            <h3 class="card-title mt-3">Reviewed Reports</h3>
                            <p class="card-text text-muted">View approved and rejected reports</p>
                            <a asp-controller="Report" asp-action="ReviewedReports" class="btn btn-kartverket-secondary btn-lg mt-3">
                                View Reviewed
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @* Dashboard for Admin *@
        @if (User.IsInRole("Admin"))
        {
            <div class="row">
                <div class="col-md-12 mb-4">
                    <h2 class="card-title-kartverket">Welcome, admin!</h2>
                    <p class="text-muted">System administration and user management</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-green);"></div>
                            <h3 class="card-title mt-3">Manage Users</h3>
                            <p class="card-text text-muted">View, create, and manage system users</p>
                            <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-kartverket-primary btn-lg mt-3">
                                Manage Users
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div style="font-size: 4rem; color: var(--kartverket-light-green);"></div>
                            <h3 class="card-title mt-3">All Reports</h3>
                            <p class="card-text text-muted">View all reports in the system</p>
                            <a asp-controller="Report" asp-action="AllReports" class="btn btn-kartverket-secondary btn-lg mt-3">
                                View All Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        @* Public landing page for non-authenticated users *@
    }
</div>
</div>
</section>
